<h3>以下の内容で、送信する。</h3>

<%= form_for(@post) do |f| %>

  <%= f.hidden_field :content %>
  <%= f.hidden_field :photo %>
  <%= f.hidden_field :photo_cache %>

  <p>コメント：<%= @post.content %></p>
  <p><%= confirm_photo(@post) %></p>

  <%= f.submit "投稿する" %>
<% end %>

<%= form_for(@post, url: new_post_path, method: 'get') do |f| %>
  <%= f.hidden_field :content %>
  <%= f.hidden_field :photo %>
  <%= f.hidden_field :photo_cache %>
  <%= f.submit "もどる", name: 'back' %>
<% end %>
