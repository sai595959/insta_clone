<!DOCTYPE html>
<html>
<head>
  <title>InstaClone</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
  <header>
    <ul class="insta_header">
      <li><%= link_to "insta_clone", root_path %></li>
      <li><%= link_to "投稿", new_post_path %></li>
      <% if user_signed_in? %>
        <li><%= link_to 'マイページ', edit_user_registration_path %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path  %></li>
        <li><%= link_to 'サインアップ', new_user_registration_path %></li>
      <% end %>


      <ul class="nav navbar-nav navbar-right">
      				<li class="dropdown">
      					<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">ドロップダウンＤ <span class="caret"></span></a>
      					<ul class="dropdown-menu" role="menu">
      						<li><a href="#">リンク・リストＤ１</a></li>
      						<li><a href="#">リンク・リストＤ２</a></li>
      						<li><a href="#">リンク・リストＤ３</a></li>
      					</ul>
      				</li>
      			</ul>
          </ul>


  </header>

<%= yield %>

</body>
</html>
